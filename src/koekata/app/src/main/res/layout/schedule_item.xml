<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/schedule_task_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/schedule_x_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#0288D1"
        app:layout_constraintTop_toBottomOf="@+id/btn_delete"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_title_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merry Chirstmas"
        android:textSize="12sp"
        android:textColor="#0288D1"
        app:layout_constraintTop_toBottomOf="@+id/btn_delete"
        app:layout_constraintLeft_toRightOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Date/Time:"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#0288D1"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_date_time_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="24/12/2021 23h00m"
        android:textSize="12sp"
        android:textColor="#0288D1"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_detail"
        app:layout_constraintLeft_toRightOf="@id/tv_date_time"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Description:"
        android:textColor="#0288D1"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_time_detail" />

    <TextView
        android:id="@+id/tv_description_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Year-end summary.\n- Start planning for the new year."
        android:textSize="12sp"
        android:textColor="#0288D1"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_time_detail"
        app:layout_constraintLeft_toRightOf="@id/tv_description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>