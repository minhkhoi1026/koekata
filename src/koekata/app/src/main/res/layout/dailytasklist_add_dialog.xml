<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dailytasklist_add_dialog_background"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Title"
        android:textSize="18sp"
        android:textColor="#0288D1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="#0288D1"
        android:background="@drawable/dailytasklist_textbox"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tv_repeat"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Repeat"
        android:textSize="18sp"
        android:textColor="#0288D1"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <Spinner
        android:id="@+id/sp_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="#0288D1"
        android:background="@drawable/dailytasklist_textbox"
        app:layout_constraintTop_toBottomOf="@id/tv_repeat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="day(s)"
        android:textSize="18sp"
        android:textColor="#0288D1"
        app:layout_constraintTop_toBottomOf="@id/tv_repeat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/sp_repeat"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="From (DD/MM/YYYY)"
        android:textSize="18sp"
        android:textColor="#0288D1"
        app:layout_constraintTop_toBottomOf="@id/sp_repeat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:id="@+id/et_from"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="#0288D1"
        android:background="@drawable/dailytasklist_textbox"
        app:layout_constraintTop_toBottomOf="@id/tv_from"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="ADD"
        android:textSize="14sp"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/et_from"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>